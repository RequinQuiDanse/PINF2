{% extends 'admin/base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
<div class="admin-content">
    <div class="page-header">
        <h1>Personnes & Newsletter</h1>
        <a href="{{ path('admin_person_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle personne
        </a>
    </div>

    <!-- Barre de recherche -->
    <div class="search-bar-container">
        <form method="get" action="{{ path('admin_person_index') }}" class="search-form">
            <div class="search-input-wrapper">
                <i class="fas fa-search search-icon"></i>
                <input 
                    type="text" 
                    name="q" 
                    value="{{ search }}" 
                    placeholder="Rechercher par nom, email, téléphone, organisation..."
                    class="search-input"
                >
                {% if search %}
                    <a href="{{ path('admin_person_index') }}" class="search-clear" title="Effacer la recherche">
                        <i class="fas fa-times"></i>
                    </a>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary btn-search">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </form>
        {% if search %}
            <div class="search-results-info">
                <span class="badge badge-info">{{ persons|length }} résultat(s) pour "{{ search }}"</span>
            </div>
        {% endif %}
    </div>

    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Organisation</th>
                    <th>Newsletter</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for person in persons %}
                <tr>
                    <td>{{ person.firstName }} {{ person.lastName }}</td>
                    <td>{{ person.email }}</td>
                    <td>{{ person.phone ?? '-' }}</td>
                    <td>{{ person.organization ?? '-' }}</td>
                    <td>
                        {% if person.subscribedToNewsletter %}
                            <span class="badge badge-success">Oui</span>
                        {% else %}
                            <span class="badge badge-secondary">Non</span>
                        {% endif %}
                    </td>
                    <td class="actions">
                        <a href="{{ path('admin_person_edit', {id: person.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form method="post" action="{{ path('admin_person_delete', {id: person.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" style="text-align:center;">Aucune personne</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
