<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %} - Harmonie & Sens</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/global.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body class="admin-body">
    {% include 'components/navbar_admin.html.twig' %}
    
    <div class="admin-container">
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <h2>Administration</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="{{ path('admin_dashboard') }}" class="sidebar-link{% if app.request.attributes.get('_route') == 'admin_dashboard' %} active{% endif %}">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="{{ path('admin_message_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'admin_message' %} active{% endif %}">
                    <i class="fas fa-envelope"></i> Messages
                </a>
                <a href="{{ path('admin_person_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'admin_person' %} active{% endif %}">
                    <i class="fas fa-users"></i> Personnes
                </a>
                <a href="{{ path('admin_testimony_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'admin_testimony' %} active{% endif %}">
                    <i class="fas fa-star"></i> TÃ©moignages
                </a>
                <a href="{{ path('admin_webinar_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'admin_webinar' %} active{% endif %}">
                    <i class="fas fa-video"></i> Webinaires
                </a>
                <a href="{{ path('admin_timetable_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'admin_timetable' %} active{% endif %}">
                    <i class="fas fa-calendar"></i> Emploi du temps
                </a>
                <a href="{{ path('app_admin_service_index') }}" class="sidebar-link{% if app.request.attributes.get('_route') starts with 'app_admin_service' %} active{% endif %}">
                    <i class="fas fa-briefcase"></i> Services & Tarifs
                </a>
            </nav>
        </aside>

        <main class="admin-main">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </div>

    {% block javascripts %}{% endblock %}
</body>
</html>
