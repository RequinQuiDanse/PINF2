{% extends 'admin/base.html.twig' %}
{% block title %}Tarifs des services{% endblock %}
{% block body %}
<div class="admin-content">
    <div class="page-header">
        <h1>Tarifs des services</h1>
        <a href="{{ path('admin_service_pricing_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Nouveau tarif</a>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr><th>Service</th><th>Prix unitaire</th><th>Unité</th><th>Statut</th><th>Actions</th></tr>
            </thead>
            <tbody>
                {% for service in services %}
                <tr>
                    <td>{{ service.serviceName }}</td>
                    <td>{{ service.unitPrice ? service.unitPrice ~ ' €' : '-' }}</td>
                    <td>{{ service.pricingUnit ?? '-' }}</td>
                    <td>
                        {% if service.isActive %}<span class="badge badge-success">Actif</span>
                        {% else %}<span class="badge badge-secondary">Inactif</span>{% endif %}
                    </td>
                    <td class="actions">
                        <a href="{{ path('admin_service_pricing_edit', {id: service.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                        <form method="post" action="{{ path('admin_service_pricing_delete', {id: service.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer?')"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
                {% else %}<tr><td colspan="5" style="text-align:center;">Aucun tarif</td></tr>{% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
