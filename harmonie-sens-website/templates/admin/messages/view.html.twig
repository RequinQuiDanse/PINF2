{% extends 'admin/base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="admin-content">
    <div class="page-header">
        <h1>Message de {{ message.firstName }} {{ message.lastName }}</h1>
        <a href="{{ path('admin_message_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <strong>De :</strong> {{ message.firstName }} {{ message.lastName }}
            </div>
            <div class="form-group">
                <strong>Email :</strong> <a href="mailto:{{ message.email }}">{{ message.email }}</a>
            </div>
            {% if message.phone %}
            <div class="form-group">
                <strong>Téléphone :</strong> {{ message.phone }}
            </div>
            {% endif %}
            <div class="form-group">
                <strong>Date :</strong> {{ message.createdAt|date('d/m/Y à H:i') }}
            </div>
            <div class="form-group">
                <strong>Sujet :</strong> {{ message.subject }}
            </div>
            <div class="form-group">
                <strong>Message :</strong>
                <div class="admin-message-box">{{ message.message }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
