{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le service{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Modifier le service : {{ service.name }}</h1>
    <a href="{{ path('app_admin_service_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="admin-content">
    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
        
        <div class="form-section">
            <h3>Informations générales</h3>
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.slug) }}
                    {{ form_widget(form.slug) }}
                    {{ form_errors(form.slug) }}
                    {% if form.slug.vars.help %}
                        <small class="form-text">{{ form.slug.vars.help }}</small>
                    {% endif %}
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <h3>Tarification</h3>
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.priceMin) }}
                    {{ form_widget(form.priceMin) }}
                    {{ form_errors(form.priceMin) }}
                    <small class="form-text">Prix minimum du service (laissez vide si non applicable)</small>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.priceMax) }}
                    {{ form_widget(form.priceMax) }}
                    {{ form_errors(form.priceMax) }}
                    <small class="form-text">Prix maximum du service (laissez vide si non applicable)</small>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.pricingUnit) }}
                    {{ form_widget(form.pricingUnit) }}
                    {{ form_errors(form.pricingUnit) }}
                    <small class="form-text">Exemples : séance, journée, mission, forfait</small>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.pricingDetails) }}
                    {{ form_widget(form.pricingDetails) }}
                    {{ form_errors(form.pricingDetails) }}
                    {% if form.pricingDetails.vars.help %}
                        <small class="form-text">{{ form.pricingDetails.vars.help }}</small>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <h3>Statut</h3>
            <div class="form-row">
                <div class="form-group">
                    <div class="form-check">
                        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    {{ form_errors(form.isActive) }}
                    <small class="form-text">Décochez pour masquer ce service du site public</small>
                </div>
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer les modifications
            </button>
            <a href="{{ path('app_admin_service_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>

<style>
.form-container {
    max-width: 800px;
    margin: 0 auto;
}

.form-section {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
}

.form-section h3 {
    color: var(--color-sage-green);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-gold);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-row:last-child {
    margin-bottom: 0;
}

.form-row .form-group:only-child {
    grid-column: 1 / -1;
}

.form-actions {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    display: flex;
    gap: 1rem;
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}
