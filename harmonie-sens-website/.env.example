# Solution, Stratégie et Sens (3S Managers) - Configuration
# Copier ce fichier vers .env.local et adapter les valeurs

###> symfony/framework-bundle ###
APP_ENV=dev
# Générer avec : php -r "echo bin2hex(random_bytes(16));"
APP_SECRET=CHANGEZ_MOI_AVEC_UNE_VALEUR_SECRETE
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost:8000
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# MySQL (par défaut)
DATABASE_URL="mysql://root:root@127.0.0.1:3306/3s_managers?serverVersion=8.0&charset=utf8mb4"

# Alternatives :
# SQLite (simple, sans serveur)
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
# PostgreSQL
# DATABASE_URL="postgresql://user:password@127.0.0.1:5432/3s_managers?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# Configuration SMTP IONOS
# Format: smtp://username:password@smtp.ionos.fr:465?encryption=ssl
MAILER_DSN=smtp://votre.email@domain.com:votre_mot_de_passe@smtp.ionos.fr:465?encryption=ssl

# Email d'expédition (doit être l'adresse email IONOS configurée)
MAIL_FROM_ADDRESS=noreply@3s-managers.fr
MAIL_FROM_NAME="Solution, Stratégie et Sens"

# Email de destination pour recevoir les notifications de contact
MAIL_ADMIN_ADDRESS=contact@3s-managers.fr

# Alternative : mode null pour dev (désactive l'envoi réel)
# MAILER_DSN=null://null
###< symfony/mailer ###
