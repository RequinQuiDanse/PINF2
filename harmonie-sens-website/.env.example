# Harmonie & Sens - Configuration
# Copier ce fichier vers .env.local et adapter les valeurs

###> symfony/framework-bundle ###
APP_ENV=dev
# Générer avec : php -r "echo bin2hex(random_bytes(16));"
APP_SECRET=CHANGEZ_MOI_AVEC_UNE_VALEUR_SECRETE
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost:8000
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# PostgreSQL (avec Docker Compose)
DATABASE_URL="postgresql://app:!ChangeMe!@127.0.0.1:5432/app?serverVersion=16&charset=utf8"

# Alternatives :
# SQLite (simple, sans serveur)
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
# MySQL
# DATABASE_URL="mysql://user:password@127.0.0.1:3306/harmonie_sens?serverVersion=8.0&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# Null (pas d'envoi réel en dev)
MAILER_DSN=null://null

# Gmail
# MAILER_DSN=gmail://username:password@default

# SMTP générique
# MAILER_DSN=smtp://user:pass@smtp.example.com:587
###< symfony/mailer ###

###> Docker PostgreSQL ###
POSTGRES_VERSION=16
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=!ChangeMe!
###< Docker PostgreSQL ###
